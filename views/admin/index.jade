extends layout

block content
  h1.
    Beermate
  p.
    Welcome to beermate administration

  div.container
    if !connected
      h4.form-signin-heading Please sign in
      form.form-inline.form-signin(action="auth/login", method="post")
        div.form-group
          label.sr-only(for="email") Email
          input.form-control(type="text", name="email", placeholder="Email")
        div.form-group
          label.sr-only(for="password") Password
          input.form-control(type="password", name="password", placeholder="Password")
        button.btn.btn-primary(type="submit") Sign in
    else
      ul
        li
          a(href="users").
            Users
        li
          a(href="pubs").
            Pubs

block footer
  script(type='text/javascript', src='/javascripts/admin/index.js')
